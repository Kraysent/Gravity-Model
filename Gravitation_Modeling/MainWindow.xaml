        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500">
    <Canvas Name="MainCanvas">
        <Button Name="PauseButton" Content="Pause" Canvas.Left="10" Canvas.Top="10" Width="75" Click="PauseButton_Click" />
        <Label Name ="EpochLabel" Content="Epoch: " Canvas.Left="90" Canvas.Top="10"/>
        <Label Name="BodiesLabel" Content="Number of bodies: " Canvas.Left="90" Canvas.Top="36"/>
    </Canvas>
</Window>
