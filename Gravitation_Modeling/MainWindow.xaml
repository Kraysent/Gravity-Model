<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Canvas>
        <Ellipse Fill="#FFF4F4F5" Height="30" Canvas.Left="{Binding Bodies[0].Coordinates.X}" Stroke="Black" Canvas.Top="{Binding Bodies[0].Coordinates.Y}" Width="30"/>
        <Ellipse Fill="#FFF4F4F5" Height="30" Canvas.Left="{Binding Bodies[1].Coordinates.X}" Stroke="Black" Canvas.Top="{Binding Bodies[1].Coordinates.Y}" Width="30"/>
    </Canvas>
</Window>
