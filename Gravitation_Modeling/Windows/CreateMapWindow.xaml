<Window x:Class="WPFUI.Windows.CreateMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CreateMapWindow" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="18*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Fill="LightGray" Stroke="Black"/>
        <Canvas Name="MainCanvas" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" MouseDown="MainCanvas_MouseDown"/>
        <Button Name="NewBodyButton" Grid.Column="0" Grid.Row="0" Margin="5" Click="NewBodyButton_Click">
            <Image Source="pack://application:,,,/Resources/Body.png"/>
        </Button>
    </Grid>
</Window>
